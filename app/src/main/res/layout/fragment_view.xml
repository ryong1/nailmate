<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <!-- 상호명 표시 (크게, 볼드체로) -->
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/shopNameTextView"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="상호명이 들어갈"
                    android:textSize="24dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="날짜가 들어갈"
                    android:textSize="11sp"
                    android:layout_weight="2"
                    android:id="@+id/dateTextView"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:backgroundTint="@color/white"
                    android:text="수정/삭제"
                    android:textColor="#9C9C9C"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:paddingLeft="20dp"
                    android:id="@+id/etcBtn"
                    />

                <!-- 사용자 닉네임 표시 -->
                <TextView
                    android:id="@+id/authorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:text="작성자가 들어갈"
                    android:textSize="10sp"
                    android:gravity="end"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

        <!-- RatingBar (크기 조절) -->
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5" />

        <!-- 가격 정보 -->
        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="가격정보가 들어갈"
            android:textSize="14sp" />

        <!-- 카테고리 (각각 다른 TextView에 추가) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <!-- 카테고리 1 -->
            <TextView
                android:id="@+id/categoryTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:text=""
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:layout_marginRight="4dp"
                android:gravity="center" />

            <!-- 카테고리 2 -->
            <TextView
                android:id="@+id/categoryTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:text=""
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:layout_marginRight="4dp"
                android:gravity="center" />

            <!-- 카테고리 3 -->
            <TextView
                android:id="@+id/categoryTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:text=""
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:layout_marginRight="4dp"
                android:gravity="center" />

            <!-- 카테고리 4 -->
            <TextView
                android:id="@+id/categoryTextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:text=""
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:layout_marginRight="4dp"
                android:gravity="center" />

            <!-- 카테고리 5 -->
            <TextView
                android:id="@+id/categoryTextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:text=""
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:layout_marginRight="4dp"
                android:gravity="center" />

            <!-- 카테고리 6 -->
            <TextView
                android:id="@+id/categoryTextView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:text=""
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:layout_marginRight="4dp"
                android:gravity="center" />

            <!-- 카테고리 7 -->
            <TextView
                android:id="@+id/categoryTextView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:layout_marginRight="4dp"
                android:background="@drawable/rounded_rectangle"
                android:gravity="center" />

            <!-- 카테고리 8 -->
            <TextView
                android:id="@+id/categoryTextView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:layout_marginRight="4dp"
                android:background="@drawable/rounded_rectangle"
                android:gravity="center" />

            <!-- 카테고리 9 -->
            <TextView
                android:id="@+id/categoryTextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:layout_marginRight="4dp"
                android:background="@drawable/rounded_rectangle"
                android:gravity="center" />

        </LinearLayout>

        <!-- 이미지뷰 (최대 4장) -->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/imageViewPager"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:background="#D5D5D5"/>

        <!-- 후기 내용 -->
        <TextView
            android:id="@+id/reviewContentTextView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text=""
            android:textSize="15dp"
            android:background="#EFEFEF"
            android:padding="5dp"/>
    </LinearLayout>
</ScrollView>
